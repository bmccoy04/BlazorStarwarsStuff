@using StarwarsStuff.Ui.Models

<TableView Data="Todos.Where(x => !x.IsDone)" >
    <TableHeaderTemplate>
        <TableHeader Title="Title" />
        <TableHeader Title="two" />
        <TableHeader />
    </TableHeaderTemplate>
    <TableBodyTemplate Context="todoItem">
        <TableTextColumn Value="@todoItem.Title" />
        <TableButtonColumn Key="@todoItem.Title" Submit="MarkDone" Delete="MarkDone" />
    </TableBodyTemplate>
</TableView>

@code {

    [Parameter]
    public IList<TodoItem> Todos { get; set; }

    [Parameter]
    public EventCallback<string> MarkDone { get; set; }
}
